datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  role      Role      @default(PLAYER)
  createdAt DateTime  @default(now())
  sessions  Session[]
}

model Session {
  id               String   @id @default(cuid())
  user             User     @relation(fields: [userId], references: [id])
  userId           String
  refreshTokenHash String
  createdAt        DateTime @default(now())
  expiresAt        DateTime
}

enum Role {
  GM
  PLAYER
}
